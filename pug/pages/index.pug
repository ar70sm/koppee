-var CurrentPage ="Home"
-var currentPage =CurrentPage.toLowerCase()
include ../components/sections
doctype html
html(lang="en")
  head
    include ../components/head
  body 
    include ../components/nav
    section#wrapper
      .owl-carousel.owl-theme
        -for(var i=1; i<=2;i++)
          .item
            img(src=`img/carousel-${i}.jpg`)
            .textBox
              p.upperP We have been servicing
              h2 Coffee 
              p since 1950
    a.goUp(href="#wrapper"): i.fa-solid.fa-angles-up
    +aboutSection
    +serviceSection
    section#offer
      div
        p 50% OFF
        p Sunday Special Offer
        p Only for Sunday from 1st Jan to 30th Jan 2045
        form
          input(type="email",placeholder="Your Email")
          input(type="submit", value="Sign Up")
    +menuSection
    +reservationSection
    +testimonialSection
    include ../components/footer
    script(src='js/jquery.min.js')
    script(src='js/owl.carousel.min.js')
    script(src="js/script.js") 